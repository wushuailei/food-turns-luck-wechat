/* 订单页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 状态标签栏 */
.status-tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #0052d9;
  font-weight: bold;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #0052d9;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  padding: 0 20rpx;
}

.order-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-pending {
  background-color: #fff3e0;
  color: #ff9800;
}

.status-completed {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status-timeout {
  background-color: #ffebee;
  color: #f44336;
}

/* 订单信息 */
.order-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 28rpx;
}

.info-row .label {
  color: #999;
  margin-right: 16rpx;
  min-width: 140rpx;
}

.info-row .value {
  color: #333;
  flex: 1;
}

/* 用户信息 */
.order-user {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.user-name {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

/* 加载更多 */
.load-more {
  padding: 40rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}
