/* 菜谱表单页样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.form-section {
  background-color: #fff;
  padding: 32rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.label.required::before {
  content: "*";
  color: #e34d59;
  margin-right: 4rpx;
}

.label-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 封面上传 */
.cover-upload {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.cover-preview {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
}

.upload-btn {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  color: #0052d9;
}

/* 步骤编辑器 */
.steps-editor,
.links-editor {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.step-item {
  border: 2rpx solid #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
}

.step-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.step-num {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.step-delete,
.link-delete {
  font-size: 24rpx;
  color: #e34d59;
  padding: 8rpx 16rpx;
}

.link-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.link-item t-input {
  flex: 1;
}

/* 标签选择器 */
.tags-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}
