/* 菜谱详情页样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 封面图 */
.cover-section {
  width: 100%;
  height: 500rpx;
  background-color: #f5f5f5;
}

.cover-image {
  width: 100%;
  height: 100%;
}

/* 基本信息 */
.info-section {
  background-color: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.recipe-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.recipe-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

/* 统计信息 */
.stats-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.stat-item .icon {
  margin-right: 8rpx;
}

/* 标签 */
.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #666;
}

/* 步骤区域 */
.steps-section,
.links-section {
  background-color: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.step-item {
  display: flex;
  margin-bottom: 32rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background-color: #0052d9;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  padding-top: 8rpx;
}

/* 链接 */
.link-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.link-item:last-child {
  margin-bottom: 0;
}

.link-text {
  font-size: 28rpx;
  color: #0052d9;
  word-break: break-all;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.owner-actions {
  display: flex;
  gap: 20rpx;
}

.owner-actions t-button {
  flex: 1;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}
