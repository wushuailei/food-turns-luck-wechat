.group-form-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-top: 20rpx;
}

.form-content {
  padding: 0 32rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.submit-btn-container {
  margin-top: 60rpx;
}
