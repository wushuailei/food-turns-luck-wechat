/* 我的收藏页样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.recipe-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recipe-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  position: relative;
}

.recipe-cover {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.recipe-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recipe-desc {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 12rpx;
}

.recipe-meta {
  font-size: 24rpx;
  color: #999;
}

.meta-item {
  display: flex;
  align-items: center;
}

.recipe-actions {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}

.action-btn {
  padding: 8rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  font-size: 24rpx;
}

.action-btn.delete {
  color: #e34d59;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #0052d9;
  padding: 16rpx 40rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}
