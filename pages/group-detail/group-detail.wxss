.group-detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.group-info-section {
  background-color: #fff;
  padding: 40rpx 32rpx;
}

.group-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.group-header-text {
  flex: 1;
}

.group-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.group-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
}

.create-time {
  color: #999;
}

.members-section {
  margin-top: 20rpx;
  background-color: #fff;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.member-count {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.member-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 22rpx;
}

.join-time {
  color: #999;
}

.actions-section {
  margin-top: 20rpx;
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
