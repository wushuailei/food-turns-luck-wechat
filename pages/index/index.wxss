/* 首页样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background-color: #fff;
}

/* 标签容器 */
.tags-container {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.tags-scroll {
  white-space: nowrap;
}

.tag-item {
  display: inline-block;
  padding: 10rpx 24rpx;
  margin-right: 16rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.tag-item.active {
  background-color: #0052d9;
  color: #fff;
}

/* 排序栏 */
.sort-bar {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.sort-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.sort-item.active {
  color: #0052d9;
  font-weight: bold;
}

.sort-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #0052d9;
  border-radius: 2rpx;
}

/* 菜谱列表 */
.recipe-list {
  padding: 0 20rpx;
}

.recipe-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.recipe-cover {
  width: 100%;
  height: 400rpx;
  background-color: #f5f5f5;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.recipe-info {
  padding: 24rpx;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recipe-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recipe-meta {
  display: flex;
  align-items: center;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
  font-size: 24rpx;
  color: #999;
}

.meta-item .icon {
  margin-right: 8rpx;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

/* 加载更多 */
.load-more {
  padding: 40rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}
